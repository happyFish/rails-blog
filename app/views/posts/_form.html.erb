<%= form_for(@post, :html => { :multipart => true } ) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= fields_for('tags') do |a| %>
      <%= a.label 'Tags (separate by commas)' %>
      <%= a.text_field 'list' %>
    <% end %>
  </div>
  
  <% @post.attachments.each do |attachment|
      puts attachment
  end
    
  %>
  
  <%= fields_for('attachment[]') do |a| %>
  <div id="attachments">
    <%= a.file_field 'file' %>
  </div>
  <% end %>
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
